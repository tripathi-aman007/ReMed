<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Tamsulosin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="485dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/drug_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamsulosin 650mg Tablet"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/tamsulosin"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/tamsulosin" />

        <TextView
            android:id="@+id/no_of_tablets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Tablet(s) in a strip"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/manufacturing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="ManuFacturer:Micro Labs Ltd"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country Of Origin:India"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16dp" />

        <!--    <LinearLayout-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:orientation="horizontal">       -->

        <!--        </LinearLayout>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bestprice"
                android:layout_width="152dp"
                android:layout_height="27dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="-20dp"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@+id/price"
                android:text="Best Price * "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="80dp"
                android:layout_toStartOf="@+id/addtocart"
                android:text="$24.73"
                android:textColor="@color/design_default_color_error"
                android:textSize="20dp" />

            <Button
                android:id="@+id/addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="16dp"
                android:text="Add to Cart" />

            <TextView
                android:id="@+id/mrp"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bestprice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="297dp"
                android:layout_marginRight="16dp"
                android:includeFontPadding="true"
                android:text="Mrp â‚¹30.91" />

        </RelativeLayout>

        <TextView
            android:id="@+id/expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Expiry Date"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="May 2025"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/composition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Composition Details"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/detail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="PARACETAMOL"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/detail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="ACETAMINOPHEN(650MG)"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/detail3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="DOLO 650MG contains Paracetamol which belongs to aa group of medicines caleed analgesics and antipyretics."
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/uses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uses"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/use1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Used for the relief of mild to moderate pain and feverish conditions such as headache,toothache,colds,influenza,joint pain and period pain"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/side_effects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Side Effects"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/effect1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Effec1"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disclaimer"
                android:textSize="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_add_alert_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="The information provided herein is supplied to the best of our abilities to make it accurate and reliable as it is published after a review by a team of professionals. This information is solely intended to provide a general overview on the product and must be used for informational purposes only. You should not use the information provided herein to diagnose, prevent, or cure a health problem. Nothing contained on this page is intended to create a doctor-patient relationship, replace or be a substitute for a registered medical practitioner's medical treatment/advice or consultation. The absence of any information or warning to any medicine shall not be considered and assumed as an implied assurance. We highly recommend that you consult your registered medical practitioner for all queries or doubts related to your medical condition. You hereby agree that you shall not make any health or medical-related decision based in whole or in part on anything contained in the Site. Please click here for detailed T &amp; C."/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>